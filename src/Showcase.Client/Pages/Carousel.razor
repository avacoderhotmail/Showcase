@page "/carousel"
@inject IJSRuntime JS

<PageTitle>Carousel Showcase</PageTitle>

<div id="carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/background.png" alt="Image 1">
        </div>
        <div class="carousel-item">
            <img src="images/profile.png" alt="Image 2">
        </div>
        <div class="carousel-item">
            <img src="images/TeamsBackground.png" alt="Image 3">
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

@code {
    [Parameter]
    public int SlideInterval { get; set; } = 3000; // default 5 seconds

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize carousel with interval
            await JS.InvokeVoidAsync("carouselInterop.initialize", "#carousel", SlideInterval);
        }
    }
}